<div id="upload-page">

    <div id="content">
        <div id="header">
            <h1>Uploads</h1>

        </div>

        <div>
            <% flash.each do |key, value| %>
                <div class="alert alert-<%= key %>"><%= value %></div>
            <% end %>
        </div>
        <br/>

        <%= form_tag({:action => :create}, :multipart => true) do %>
            Choose a tab-separated file to upload.
            <br/>
            <br/>
            <%= file_field_tag 'upload' %>
            <br/>
            <br/>

            <button type="submit">Upload</button>
        <% end %>

    </div>

</div>
